<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/blog_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.aaronjeromemiller.actionbar.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:contentPaddingRight="0dp"
        app:contentPaddingLeft="0dp"
        app:cardMaxElevation="15dp"
        android:longClickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:longClickable="true"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/food_card_image"
                android:scaleType="centerCrop"
                android:longClickable="true"/>

            <TextView
                android:id="@+id/food_card_title"
                android:gravity="bottom"
                android:paddingBottom="20dp"
                android:textSize="25sp"
                android:text="Card Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"/>

            <TextView
                android:id="@+id/food_card_description"
                android:gravity="bottom"
                android:text="Card Description of how awesome the food is!"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"/>

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/cardProgressDialog"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>